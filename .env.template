# ============================================
# 주간보고서 자동화 시스템 - 환경 변수 템플릿
# ============================================
# 이 파일을 .env로 복사하여 실제 값을 입력하세요.
# cp .env.template .env

# --- Notion ---
# https://www.notion.so/profile/integrations 에서 내부 통합 생성 후 토큰 복사
NOTION_TOKEN=ntn_YOUR_NOTION_TOKEN

# Notion 일일 업무일지 데이터베이스 ID
# DB URL에서 추출: notion.so/{workspace}/{database_id}?v=...
NOTION_DATABASE_ID=YOUR_DATABASE_ID

# --- Atlassian / Confluence ---
# https://id.atlassian.com/manage-profile/security/api-tokens 에서 생성
ATLASSIAN_EMAIL=your-email@company.com
ATLASSIAN_API_TOKEN=YOUR_ATLASSIAN_API_TOKEN
CONFLUENCE_BASE_URL=https://your-domain.atlassian.net/wiki

# Confluence 주간보고 업로드 대상
CONFLUENCE_SPACE_KEY=TEAM
CONFLUENCE_ROOT_PAGE_ID=123456789

# 주간보고 계층 구조 폴더명 접두어 (예: "센터직속 2026", "센터직속 2026-02", ...)
CONFLUENCE_REPORT_PREFIX=센터직속

# 보고서 작성자 이름 (페이지 제목에 사용: "이두영 2026-02-09 ~ 02-13")
REPORT_AUTHOR_NAME=홍길동

# --- n8n ---
# n8n 실행 후 Settings > API 에서 생성
N8N_HOST_URL=http://localhost:5678
N8N_API_KEY=YOUR_N8N_API_KEY

# --- n8n 런타임 설정 ---
# Code 노드에서 $env로 환경변수 접근 허용 (n8n 2.x 필수)
N8N_BLOCK_ENV_ACCESS_IN_NODE=false
# 회사 프록시 등 자체 서명 인증서 환경에서 SSL 오류 방지 (필요 시)
NODE_TLS_REJECT_UNAUTHORIZED=0
